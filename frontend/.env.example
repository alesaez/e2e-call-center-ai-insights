# Frontend Environment Variables for Local Development
# Copy this file to .env.local and fill in your values

# Microsoft Entra ID Configuration
# Get these values from Azure Portal > App Registrations > Your App
VITE_ENTRA_CLIENT_ID=your-client-id-here
VITE_ENTRA_TENANT_ID=your-tenant-id-here

# Application URLs
VITE_REDIRECT_URI=http://localhost:3000
VITE_POST_LOGOUT_REDIRECT_URI=http://localhost:3000

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:8000

# API Scope - format: api://{backend-client-id}/access_as_user
VITE_API_SCOPE=api://your-backend-client-id/access_as_user

# Tenant Branding Configuration (White Labeling)
# Customize the application appearance per tenant
VITE_TENANT_ID=default
VITE_TENANT_NAME=Call Center AI Insights

# Logo Configuration
# Use EITHER logo path (relative to public folder) OR logo URL (external)
# Example local: VITE_TENANT_LOGO_PATH=logo.png
# Example URL: VITE_TENANT_LOGO_URL=https://your-domain.com/logo.png
VITE_TENANT_LOGO_PATH=
VITE_TENANT_LOGO_URL=

# Favicon Configuration
# Path relative to public folder or external URL
# Example: VITE_TENANT_FAVICON_URL=favicon.ico
VITE_TENANT_FAVICON_URL=

# Theme Colors (hex format)
VITE_TENANT_PRIMARY_COLOR='#0078d4'
VITE_TENANT_SECONDARY_COLOR='#2b88d8'

