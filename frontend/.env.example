# Frontend Environment Variables for Local Development
# Copy this file to .env.local and fill in your values

# Microsoft Entra ID Configuration
# Get these values from Azure Portal > App Registrations > Your App
VITE_ENTRA_CLIENT_ID=your-client-id-here
VITE_ENTRA_TENANT_ID=your-tenant-id-here

# Application URLs
VITE_REDIRECT_URI=http://localhost:3000
VITE_POST_LOGOUT_REDIRECT_URI=http://localhost:3000

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:8000

# API Scope - format: api://{backend-client-id}/access_as_user
VITE_API_SCOPE=api://your-backend-client-id/access_as_user
